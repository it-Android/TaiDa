<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <layer-list>
            <item
                android:top="-5dp"
                android:left="-5dp"
                android:right="-5dp">
                <shape android:shape="rectangle">
                    <stroke android:width="2dp" android:color="#c9bb00"></stroke>
                </shape>
            </item>

        </layer-list>

    </item>
    <item android:state_checked="false">
        <layer-list>
            <item
                android:top="-2dp"
                android:left="-2dp">
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="#00ffffff"></stroke>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>