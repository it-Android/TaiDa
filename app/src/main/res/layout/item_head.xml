<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#a4706e6e"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_item_head_img"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:scaleType="center" />

    <TextView
        android:layout_below="@id/iv_item_head_img"
        android:id="@+id/Text_name"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff" />

    <TextView

        android:id="@+id/Text_num"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_below="@+id/Text_name"
        android:layout_marginTop="15dp"
        android:textColor="#ffffff"
        android:textSize="15sp"
        />
    <TextView
        android:layout_below="@id/Text_num"
        android:id="@+id/Text_stateTime"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
      />
    <TextView
        android:layout_below="@id/Text_stateTime"
        android:id="@+id/Text_stateTime1"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:textSize="15sp"
        android:textColor="#ffffff"
     />
    <TextView
        android:layout_below="@id/Text_stateTime1"
        android:id="@+id/Text_state"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        />
</LinearLayout>
